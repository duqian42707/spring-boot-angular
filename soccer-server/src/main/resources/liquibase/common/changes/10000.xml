    </changeSet>
    <changeSet id="10000-009" author="soccer">
        <preConditions>
            <not>
                <tableExists tableName="sys_role_auth"/>
            </not>
        </preConditions>
        <createTable tableName="sys_role_auth" remarks="角色-权限关联表">
